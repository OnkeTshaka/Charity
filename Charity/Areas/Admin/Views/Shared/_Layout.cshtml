<body>
    <div style="margin:0;padding:0;" id="fh5co-wrapper">
        <div id="fh5co-page">
            <div class="header-top">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 text-left fh5co-link">
                            <a href="#">FAQ</a>
                            <a href="#">Forum</a>
                            <a href="#">Contact</a>
                        </div>
                        <div class="col-md-6 col-sm-6 text-right fh5co-social">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
            </div>
            <header id="fh5co-header-section" class="sticky-banner">
                <div class="container">
                    <div class="nav-header">
                        <a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle dark"><i></i></a>
                        <h1 id="fh5co-logo"><img src="~/Images/logo.png" /><a href="@Url.Action("Index", "Home", new { area = "" }, null)">Donation App</a></h1>
                        <!-- START #fh5co-menu-wrap -->
                        <nav id="fh5co-menu-wrap" role="navigation">
                            <ul class="sf-menu" id="fh5co-primary-menu">
                                <li class="active">
                                    <a href="@Url.Action("Index", "Home", new { area = "" }, null)">Home</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("About", "Home", new { area = "" }, null)">About</a>
                                </li>
                                <li><a href="@Url.Action("Index", "Home", new { area = "" }, null)#contact">Contact Us</a></li>
                                <li>
                                    <a href="#" class="fh5co-sub-ddown">Distribution</a>
                                    <ul class="fh5co-sub-menu">
                                        <li><a href="@Url.Action("Create","Deliveries", new { area = "" }, null)">Make Donation</a></li>
                                        <li><a href="@Url.Action("Index","Deliveries", new { area = "" }, null)">View Donations</a></li>
                                        <li><a href="@Url.Action("StatusChange","Deliveries", new { area = "" }, null)">Update Status</a></li>
                                        <li><a href="@Url.Action("Index","OnRoutes", new { area = "" }, null)">Packages OnRoute</a></li>
                                        <li><a href="@Url.Action("Index","Delivereds", new { area = "" }, null)">Delivered Packages</a></li>
                                    </ul>
                                </li>
                                <li>@Html.ActionLink("Charities", "Index", "Organisations")</li>
                                <li>@Html.ActionLink("Roles", "Index", "Role", new { area = "Admin" }, null)</li>
                                <li>
                                    <a href="#" class="fh5co-sub-ddown">Projects</a>
                                    <ul class="fh5co-sub-menu">
                                        <li>@Html.ActionLink("Category", "Index", "Categories", new { area = "" }, null)</li>

                                        <li>@Html.ActionLink("Add Blog", "Create", "Home", new { area = "" }, null)</li>
                                    </ul>
                                </li>
                                @if (User.IsInRole("Donor"))
                                {
                                    <li>@Html.ActionLink("Donation Campaign", "Index", "Home", new { area = "" }, null)</li>
                                    <li><a href="@Url.Action("Create","Payments", new { area = "" }, null)"> Donate Now</a></li>

                                }
                                @if (User.IsInRole("OrganisationRep"))
                                {
                                    <li>
                                        <a href="#" class="fh5co-sub-ddown">Projects</a>
                                        <ul class="fh5co-sub-menu">
                                            <li>@Html.ActionLink("Donation Campaign", "Index", "Blogs", new { area = "" }, null)</li>
                                            <li>@Html.ActionLink("Category", "Index", "Categories", new { area = "" }, null)</li>
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </header>



            <div class="container body-content" style="width:90%;margin-bottom:auto">
                @RenderBody()
            </div>
                <footer>
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3 text-center">
                            <p class="fh5co-social-icons">
                                <a href="#"><i class="icon-twitter2"></i></a>
                                <a href="#"><i class="icon-facebook2"></i></a>
                                <a href="#"><i class="icon-instagram"></i></a>
                                <a href="#"><i class="icon-dribbble2"></i></a>
                                <a href="#"><i class="icon-youtube"></i></a>
                            </p>
                            <p style="margin-left:25px;">&copy; @DateTime.Now.Year - Donation App</p>
                        </div>
                        </div>
                    
             </footer>
            <!-- Contact Section -->
            @*@Html.Partial("_ContactUs")*@


@model Charity.Models.Blog

@{
    ViewBag.Title = "Delete";
}

<div class="jumbotron" style="margin-top:20PX;">
    <h1>Are you sure you want to delete this?</h1>

    <div style="display:inline-block">
        <h3>@Html.DisplayFor(model => model.Title)</h3>
        <img src="~/Images/@Model.Picture" class="img-responsive img-thumbnail" style="width:50px; height:50px;" alt="" />
    </div>

    <div class="alert alert-danger" role="alert">Remember, You will not be able to reverse this decision !.</div>

    <p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger btn-lg" /> |
                @Html.ActionLink("Cancel", "Index", null, htmlAttributes: new { @class = "btn btn-success btn-lg" })
            </div>
        }
    </p>
</div>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donation: Amabutho</title>
    <!-- <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700,300' rel='stylesheet' type='text/css'> -->
    <!-- Animate.css -->
    <link href="~/Content/css/animate.css" rel="stylesheet" />
    <!-- Icomoon Icon Fonts-->
    <link href="~/Content/css/icomoon.css" rel="stylesheet" />
    <!-- Bootstrap  -->
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <!-- Superfish -->
    <link href="~/Content/css/superfish.css" rel="stylesheet" />

    <link href="~/Content/css/style.css" rel="stylesheet" />


    <!-- Modernizr JS -->
    <script src="~/Scripts/js/modernizr-2.6.2.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Head", required: false)

</head>
<body>
    <div style="margin:0;padding:0;" id="fh5co-wrapper">
        <div id="fh5co-page">
            <div class="header-top">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 text-left fh5co-link">
                            <a href="#">FAQ</a>
                            <a href="#">Forum</a>
                            <a href="#">Contact</a>
                        </div>
                        <div class="col-md-6 col-sm-6 text-right fh5co-social">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
            </div>
            </div>
         </div>
            <header id="fh5co-header-section" class="sticky-banner">
                <div class="container">
                    <div class="nav-header">
                        <a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle dark"><i></i></a>
                        <h1 id="fh5co-logo"><img src="~/Images/logo.png" /><a href="@Url.Action("Index", "Home")">Donation App</a></h1>
                        <!-- START #fh5co-menu-wrap -->
                        <nav id="fh5co-menu-wrap" role="navigation">
                            <ul class="sf-menu" id="fh5co-primary-menu">
                                <li class="active">
                                    <a href="@Url.Action("Index", "Home")">Home</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("About", "Home")">About</a>
                                </li>
                                <li><a href="@Url.Action("Index", "Home")#contact">Contact Us</a></li>
                                <li>
                                    <a href="#" class="fh5co-sub-ddown">Distribution</a>
                                    <ul class="fh5co-sub-menu">
                                        <li><a href="@Url.Action("Create","Deliveries")">Make Donation</a></li>
                                        <li><a href="@Url.Action("Index","Deliveries")">View Donations</a></li>
                                        <li><a href="@Url.Action("StatusChange","Deliveries")">Update Status</a></li>
                                        <li><a href="@Url.Action("Index","OnRoutes")">Packages OnRoute</a></li>
                                        <li><a href="@Url.Action("Index","Delivereds")">Delivered Packages</a></li>
                                    </ul>
                                </li>
                                <li>@Html.ActionLink("Charities", "Index", "Organisations")</li>
                                <li>@Html.ActionLink("Roles", "Index", "Role", new { area = "Admin" }, null)</li>
                                <li>
                                    <a href="#" class="fh5co-sub-ddown">Projects</a>
                                    <ul class="fh5co-sub-menu">
                                        <li>@Html.ActionLink("Category", "Index", "Categories")</li>

                                        <li>@Html.ActionLink("Add Blog", "Create", "Home")</li>
                                    </ul>
                                </li>
                                @if (User.IsInRole("Donor"))
                                {
                                    <li>@Html.ActionLink("Donation Campaign", "Index", "Home")</li>
                                    <li><a href="@Url.Action("Create","Payments")"> Donate Now</a></li>

                                }
                                @if (User.IsInRole("OrganisationRep"))
                                {
                                    <li>
                                        <a href="#" class="fh5co-sub-ddown">Projects</a>
                                        <ul class="fh5co-sub-menu">
                                            <li>@Html.ActionLink("Donation Campaign", "Index", "Blogs")</li>
                                            <li>@Html.ActionLink("Category", "Index", "Categories")</li>
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </header>

            <div class="container body-content">
                @RenderBody()
                <hr />

            </div>
    <footer>
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <p class="fh5co-social-icons">
                    <a href="#"><i class="icon-twitter2"></i></a>
                    <a href="#"><i class="icon-facebook2"></i></a>
                    <a href="#"><i class="icon-instagram"></i></a>
                    <a href="#"><i class="icon-dribbble2"></i></a>
                    <a href="#"><i class="icon-youtube"></i></a>
                </p>
                <p style="margin-left:25px;">&copy; @DateTime.Now.Year - Donation App</p>
            </div>
        </div>

    </footer>
            <!-- jQuery -->


            <script src="~/Scripts/js/jquery.min.js"></script>
            <!-- jQuery Easing -->
            <script src="~/Scripts/js/jquery.easing.1.3.js"></script>
            <!-- Bootstrap -->
            <script src="~/Scripts/js/bootstrap.min.js"></script>
            <!-- Waypoints -->
            <script src="~/Scripts/js/jquery.waypoints.min.js"></script>
            <script src="~/Scripts/js/sticky.js"></script>

            <!-- Stellar -->
            <script src="~/Scripts/js/jquery.stellar.min.js"></script>
            <!-- Superfish -->
            <script src="~/Scripts/js/hoverIntent.js"></script>
            <script src="~/Scripts/js/superfish.js"></script>

            <!-- Main JS -->
            <script src="~/Scripts/js/main.js"></script>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
</body>
</html>



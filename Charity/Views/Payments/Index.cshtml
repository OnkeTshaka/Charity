@model Charity.ViewModels.CampaignViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Donors</h2>

<table class="table">
    <tr>
        <th>
            @Html.Label("Name")
            @*@Html.DisplayNameFor(model => model.Name)*@
        </th>
        <th>
            @Html.Label("Last Name")
            @*@Html.DisplayNameFor(model => model.LastName)*@
        </th>
        <th>
            @Html.Label("Email")
            @*@Html.DisplayNameFor(model => model.Email)*@
        </th>
        <th>
            @Html.Label("Phone")
            @*@Html.DisplayNameFor(model => model.Phone)*@
        </th>
        <th>
            @Html.Label("Type")
            @*@Html.DisplayNameFor(model => model.DonationType)*@
        </th>
        <th>
            @Html.Label("Amount")
            @*@Html.DisplayNameFor(model => model.Amount)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Payments) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonationType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PaymentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PaymentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PaymentID })
        </td>
    </tr>
}

</table>
